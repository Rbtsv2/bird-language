{
    "scopeName": "source.bird",
    "patterns": [
        {
            "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
            "name": "entity.name.function.bird"
        },
        {
            "match": "\\b(return|while|if|else|for|in|break|from|import|as|try|except)\\b",
            "name": "keyword.control.bird"
        },
        {
            "match": "(?<=\\b\\w+\\b)\\s*[-+*/=]|[-+*/=]\\s*(?=\\b\\w+\\b)",
            "name": "variable.operand.bird"
        },
        {
            "match": "\\b(True|False)\\b",
            "name": "constant.language.bird"
        },
        {
            "match": "\"[^\"]*\"",
            "name": "string.quoted.double.bird"
        },
        {
            "match": "'[^']*'",
            "name": "string.quoted.single.bird"
        },
        {
            "match": "\\(|\\)",
            "name": "punctuation.parenthesis.bird"
        },
        {
            "match": "\\[|\\]",
            "name": "punctuation.bracket.bird"
        },
        {
            "match": "\\{|\\}",
            "name": "punctuation.brace.bird"
        }
    ],
    "repository": {},
    "name": "Bird"
}

