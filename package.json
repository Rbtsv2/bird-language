{
    "name": "bird-language",
    "displayName": "Bird Language Support",
    "description": "Syntax highlighting for Bird language",
    "version": "0.0.2",
    "publisher": "BirdLanguageSupport",
    "repository": {
        "type": "git",
        "url": "https://github.com/Rbtsv2/bird-language.git"
      },
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": ["Programming Languages"],
    "contributes": {
        "themes": [
            {
                "label": "Bird Color Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/bird.theme.json"
            }
        ],
        "languages": [{
            "id": "bird",
            "aliases": ["Bird", "bird"],
            "extensions": [".bird"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "bird",
            "scopeName": "source.bird",
            "path": "./syntaxes/bird.language.json"
        }]
    }
}
